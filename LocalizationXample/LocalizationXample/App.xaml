<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocalizationXample.App">
	<Application.Resources>
        <ResourceDictionary>
            <Style TargetType="ContentPage" ApplyToDerivedTypes="True">
                <Setter Property="Padding" Value="20"/>
                <Setter Property="BackgroundColor" Value="White"/>
            </Style>
            <Style x:Key="BaseButton" TargetType="Button">
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="CornerRadius" Value="15"/>
            </Style>
            <Style x:Key="LoginButton" BaseResourceKey="BaseButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#4d90fe"/>
            </Style>
            <Style x:Key="LanguageButton" BaseResourceKey="BaseButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#22aa36"/>
            </Style>
        </ResourceDictionary>
	</Application.Resources>
</Application>